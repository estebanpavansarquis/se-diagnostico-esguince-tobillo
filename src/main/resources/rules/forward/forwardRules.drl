rule "R05 Diagnóstico Pop Negativo"
    when
    	$paciente: Paciente()
    	$lesion: Lesion(
        	escucharPop == false,   
        	sentirPop == false   
        )from $paciente.lesion
    then
    	modify($paciente) {
    		diagnosticoPop.setPop(false)
    	}
end

rule "R06 Diagnóstico Pop Positivo Siente"
    when
    	$paciente: Paciente()
    	$lesion: Lesion(
        	escucharPop == true      
        )from $paciente.lesion
    then
    	modify($paciente) {
    		diagnosticoPop.setPop(true)
    	}
end

rule "R7 Diagnóstico Pop Positivo Escucha"
